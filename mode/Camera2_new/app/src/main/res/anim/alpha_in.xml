<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 先变黑并保持 1100 毫秒 -->
    <alpha
        android:duration="1100"
        android:fillAfter="true"
        android:fromAlpha="0.0"
        android:toAlpha="0.0"/>

    <!-- 再逐渐变回透明 -->
    <alpha
        android:duration="200"
        android:fillAfter="true"
        android:fromAlpha="0.0"
        android:toAlpha="1.0"/>
</set>
