<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:fitsSystemWindows="false">

    <com.psb.myapplication.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:backgroundTint="#0B0808" />

    <com.psb.myapplication.CustomViewL
        android:id="@+id/mCustomView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="580dp"
        android:background="#00000000"
        android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_gravity="bottom|center"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/recordvideo"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/stop"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/capture"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="64dp"
        android:src="@drawable/capture"
        tools:ignore="SpeakableTextPresentCheck" />


    <ImageView
        android:id="@+id/picture_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="64dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/switch_camera"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/switch_camera"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitCenter" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">
    <!-- 自己定义拍照的标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">
<!--        <ImageView-->
<!--            android:id="@+id/frame_switch"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:focusable="false"-->
<!--            android:paddingTop="10dp"-->
<!--            android:paddingRight="10dp"-->
<!--            android:paddingBottom="10dp"-->
<!--            android:src="@drawable/frame_switch"-->
<!--            tools:ignore="SpeakableTextPresentCheck" />-->
            <TextView
                android:id="@+id/frame_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="4:3"
                android:textSize="25sp"
                android:gravity="right|center"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/void_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="720P"
                android:visibility="gone"
                android:textSize="25sp"
                android:gravity="right|center"
                tools:ignore="RtlSymmetry"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                />



            <ImageView
                android:id="@+id/falsh_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:focusable="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:src="@drawable/falshlightclose" />

<!--            <ImageButton-->
<!--            android:id="@+id/void_quality"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content" android:paddingBottom="10dp"-->
<!--            android:paddingEnd="10dp"-->
<!--            android:paddingTop="10dp"-->
<!--            android:focusable="false"-->
<!--            android:visibility="gone"-->
<!--            android:src="@drawable/video_quality"/>-->
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
</FrameLayout>
