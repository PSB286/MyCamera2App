<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

        <com.example.cameraapp.AutoFitTextureView
            android:id="@+id/textureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="90dp"
            android:layout_marginStart="30dp"
            android:visibility="visible"
            android:background="@drawable/ic_preview"
            android:scaleType="centerCrop"
            android:layout_gravity="start|bottom"/>
        <Button
            android:id="@+id/capture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="90dp"
            android:visibility="visible"
            android:layout_gravity="center|bottom"
            android:background="@drawable/ic_take_picture" />
        <ImageButton
            android:id="@+id/switchCameraId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="90dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="end|bottom"
            android:visibility="visible"
            android:src="@color/white"/>
        <Button
            android:id="@+id/record"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:enabled="false"
            android:background="@drawable/ic_video_btn"
            android:layout_gravity="bottom|center"
            android:visibility="gone"
            android:layout_marginBottom="90dp"/>

        <Button
            android:id="@+id/capbtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@android:color/transparent"
            android:layout_marginBottom="160dp"
            android:textColor="@color/yellow"
            android:text="拍照"/>
        <Button
            android:id="@+id/vidbtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="160dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:text="录像"/>
        <Spinner
            android:id="@+id/videoQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:visibility="gone"/>
        <Spinner
            android:id="@+id/aspectRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center|top" />

</FrameLayout>